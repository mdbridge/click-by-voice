{
    "manifest_version": 3,

    "name": "Click by Voice",
    "version": "0.34.4",
    "description": "This Chrome browser extension provides support for activating links and other HTML elements using voice commands.",

    "permissions": [
	"clipboardRead",
	"clipboardWrite",  // Not required but polite
	"storage",
	"offscreen",       // Needed for clipboard access from background service worker
        "webNavigation"    // Needed to enumerate all frames
    ],

    // icons for elsewhere than the toolbar (e.g., chrome://extensions, chrome web store)
    "icons": { 
        "16": "images/icon_16.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png" 
    },

    // display popup.html when extension icon clicked or on _execute_action action:
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
	    // 16 pixels looks too small
            "38":  "images/icon_38.png",  // resized down automatically to 19 X 19
            "48":  "images/icon_48.png",
            "128": "images/icon_128.png"
        }
    },

    "commands": {
        // ask for a hint number to activate via a pop up
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Space"
            },
            "description": "Activate (e.g., click or focus) a hint"
        },
        "blur": {
            "suggested_key": {
                "default": "Ctrl+Shift+Comma"
            },
            "description": "Blur (remove keyboard focus from elements)"
        },
        "execute_command_from_clipboard": {
            "suggested_key": {
                "default": "Ctrl+Shift+Period"
            },
            "description": "Activate (e.g., click or focus) a hint specified by clipboard"
        }
    },


    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "content_scripts/jquery-3.7.1.min.js",
                "content_scripts/utilities.js",
                "content_scripts/batching_updates.js",
                "content_scripts/HintManager.js",
                "content_scripts/Dom_walk.js",
                "content_scripts/activate.js",
                "content_scripts/add_hint.js",
                "content_scripts/find_hint.js",
                "content_scripts/hints.js",
                "content_scripts/content_script.js"
            ],
            "css": ["content_scripts/show_hints.css"],
            // Inject CSS into all frames to ensure hints are displayed everywhere:
            "all_frames": true,
            // Handle about:srcdoc (i.e., iframe srcdoc=...)
            "match_about_blank": true,
            // Handle iframes sandbox (srcdoc?) w/o allow-same-origin:
            "match_origin_as_fallback": true
        }
    ],

    "background": {
        "service_worker": "background/background.js",
	"type": "module"
    },

    "options_ui": {
	"page": "options/options.html",
	"open_in_tab": true
    }
}
